<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linearLayoutParent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lock Screen"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:layout_marginLeft="5dp"
            android:onClick="lockScreenPressed"
            android:id="@+id/btnLockScreen"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Throw Confetti"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:layout_marginLeft="5dp"
            android:onClick="throwConfettiPressed"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sweep Into Pile"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:layout_marginLeft="5dp"
            android:onClick="sweepIntoPilePressed"/>

    </LinearLayout>

</LinearLayout>